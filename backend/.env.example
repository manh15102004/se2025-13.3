# Ví dụ các cấu hình .env cho các trường hợp khác nhau

## 1. XAMPP hoặc MySQL Standalone (Local)
# Sao chép nội dung này vào backend/.env
PORT=5000
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=appsale
DB_PORT=3306
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d
NODE_ENV=development


## 2. MySQL Standalone với Password
# Nếu bạn set password cho root khi cài MySQL
PORT=5000
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=appsale
DB_PORT=3306
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d
NODE_ENV=development


